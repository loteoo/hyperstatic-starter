{
  "version": "1.0.0",
  "name": "hyperapp-starter",
  "description": "Hyperapp PWA starter",
  "author": "Alexandre Lotte <dev@alexlotte.ca>",
  "scripts": {
    "start": "parcel src/index.html --open",
    "build": "parcel build src/index.html",
    "prerender": "rimraf dist && npm run build && hyperstatic",
    "lint": "eslint \"./src/**/*.{js,jsx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "render-pages": "npm run build && node ./render-pages.js"
  },
  "dependencies": {
    "hyperapp": "^2.0.8",
    "hyperstatic": "^2.0.1",
    "sanitize.css": "^12.0.1"
  },
  "devDependencies": {
    "parcel": "^1.12.4",
    "postcss-modules": "^1.5.0",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
